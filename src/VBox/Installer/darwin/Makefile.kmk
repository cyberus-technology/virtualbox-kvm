	MacOS/VBoxHeadless \
	MacOS/VBoxNetDHCP \
	MacOS/VBoxNetNAT \
	MacOS/VBoxVMMPreload
ifdef VBOX_WITH_QTGUI
 VBOX_DI_VBAPP_PROGS_HARDENED += \
 	Resources/VirtualBoxVM.app/Contents/MacOS/VirtualBoxVM
endif

VBOX_DI_VBAPP_PROGS = \
	MacOS/VBoxManage \
	MacOS/VBoxSVC \
	MacOS/VBoxXPCOMIPCD \
	MacOS/VBoxNetAdpCtl \
	MacOS/VBoxExtPackHelperApp \
	MacOS/VBoxBugReport \
	MacOS/VBoxBalloonCtrl \
	MacOS/VBoxAutostart \
	$(if $(VBOX_WITH_WEBSERVICES),MacOS/vboxwebsrv) \
