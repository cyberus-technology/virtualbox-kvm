/rules: --treat-as Makefile --no-convert-eol --dont-set-svn-executable
/changelog:           --treat-as plaintext --external-copyright --del-action force-native-eol --add-action force-lf
/compat:              --treat-as plaintext --external-copyright --del-action force-native-eol --add-action force-lf
/control:             --treat-as plaintext --external-copyright --del-action force-native-eol --add-action force-lf
/dirs:                --treat-as plaintext --external-copyright --del-action force-native-eol --add-action force-lf
/lintian-override.in: --treat-as plaintext --external-copyright --del-action force-native-eol --add-action force-lf
/templates:           --treat-as plaintext --external-copyright --no-strip-trailing-blanks
